<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <input type = "date" id = "dob">
    <button onclick = "findDay()">Find Day</button>
    <p id = "result"></p>
    <script>
        function findDay(){
            let dob = new Date(document.getElementById("dob").value)
            let days = ["Sun", "Mon", "Tues", "Wed", "Thu", "Fri", "Sat"]
            if (days[dob.getDay()] == "Sat" || days[dob.getDay()== "Sun"]){
            document.getElementById("result").innerText = "It is a weekend"
        }
            else{
                document.getElementById("result").innerText = "no it is a working day"
            }
        }
    </script>
</body>
</html>


